<% layout('./layouts/admin.ejs') -%>

<h2>List of users</h2>
<table class="table table-bordered table-striped">
    <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <th>Activated</th>
    </tr>
    <% users.forEach(function (user) { %>
        <tr>
            <td><%= user.username%></td>
            <td><%= user.email%></td>
            <td><%= user.role%></td>
            <% if (user.activationCode) { %>
                <td>false</td>
            <% } else  { %>
                <td>true</td>
            <% } %>
        </tr>
    <% }) %>
</table>